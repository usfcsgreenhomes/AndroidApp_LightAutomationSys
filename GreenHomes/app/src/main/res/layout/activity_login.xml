<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFE8F0DD"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.usfca.greenhomes.Login"
        android:background="#FFE8F0DD">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/logo"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="184dp"
            android:hint="Enter your Email ID"
            android:autoText="true"
            android:linksClickable="false"
            android:textAlignment="center"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Enter your Password"
            android:textAlignment="center"
            android:typeface="serif"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/login"
            android:layout_marginTop="64dp"
            android:background="#5a785a"
            android:textColor="#ffffff"
            android:backgroundTintMode="multiply"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:typeface="serif"
            android:textStyle="bold"
            android:onClick="onLoginButtonListener" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Don&apos;t have an account? Sign up!"
            android:id="@+id/textView"
            android:textColor="#012807"
            android:onClick="onSignupLink"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:typeface="serif" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/editText2"
            android:src="@drawable/visibility"
            android:onClick="onPasswordClickListener" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Forgot Password?"
            android:id="@+id/textView8"
            android:textColor="#012807"
            android:textAlignment="inherit"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:onClick="onForgotPasswordLink" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:id="@+id/checkBox"
            android:textColor="#676762"
            android:typeface="serif"
            android:textAlignment="textStart"
            android:layout_below="@+id/editText2"
            android:layout_alignRight="@+id/imageView11"
            android:layout_alignEnd="@+id/imageView11" />

    </RelativeLayout>
</ScrollView>